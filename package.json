{
  "name": "react-patterns-monorepo",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"pnpm dev:patterns\" \"pnpm dev:web\"",
    "dev:web": "pnpm --filter react-patterns-demo-web dev",
    "dev:patterns": "pnpm --filter react-patterns-docs dev",
    "build": "pnpm -r build",
    "build:packages": "pnpm --filter './packages/*' build",
    "clean": "pnpm -r clean",
    "install:all": "pnpm install",
    "type-check": "pnpm -r type-check",
    "test": "pnpm --filter react-patterns-docs test",
    "test:watch": "pnpm --filter react-patterns-docs test:watch",
    "test:coverage": "pnpm --filter react-patterns-docs test:coverage"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "concurrently": "^9.2.0",
    "typescript": "^5.0.0"
  }
}
